{
	"name": "@hamishwhc/cdk8s-monorepo",
	"private": true,
	"scripts": {
		"lint": "turbo run lint",
		"typecheck": "turbo run typecheck",
		"dist": "turbo run dist",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"cs": "changeset",
		"publish-pkgs": "turbo run publish-pkg --concurrency=1 && changeset tag && git push --follow-tags",
		"cloc": "cloc --exclude-dir=imports,dist $(git ls-files)"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"prettier": "catalog:",
		"turbo": "^2.8.3",
		"typescript": "catalog:"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"arktype": "^2.1.26",
			"cdk8s": "^2.70.28",
			"cdk8s-cli": "^2.203.3",
			"cdk8s-plus-32": "^2.5.7",
			"constructs": "^10.4.3",
			"@types/bun": "^1.3.8",
			"eslint": "^9.34.0",
			"typescript": "^5.9.3",
			"cmd-ts": "^0.14.3",
			"tsdown": "^0.20.2",
			"prettier": "^3.6.2"
		}
	},
	"packageManager": "bun@1.3.8",
	"engines": {
		"bun": ">=1.3.8"
	}
}
