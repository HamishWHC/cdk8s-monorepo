{
	"name": "cdk8s-opinionated-cli",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"scripts": {
		"lint": "eslint . --max-warnings 0",
		"typecheck": "tsc --noEmit",
		"dist": "bun --bun tsdown",
		"generate-config-types": "bun run ./scripts/generate-config-types.ts"
	},
	"dependencies": {
		"cdk8s": "catalog:",
		"cdk8s-kbld2": "workspace:*",
		"cdk8s-local": "workspace:*",
		"cmd-ts": "catalog:",
		"constructs": "catalog:",
		"@repo/utils": "workspace:*"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/bun": "catalog:",
		"eslint": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	},
	"exports": {
		".": {
			"bun": "./src/index.ts",
			"default": "./dist/index.mjs"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"exports": {
			".": "./dist/index.mjs",
			"./package.json": "./package.json"
		}
	}
}
