{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"target": "ESNext",
		"module": "esnext",
		"moduleDetection": "force",

		// Import options
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"useUnknownInCatchVariables": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		// Investigate enabling this later - currently blocked by (at least) cdk8s-plus
		// "exactOptionalPropertyTypes": true,

		// Disable some best practices because they annoy me
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		// Output options
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"incremental": false,

		// To ensure that we can import from publishable workspace packages _without_ needing them to be built first,
		// we tell TypeScript to use bun's custom condition, which is expected to point to source files.
		"customConditions": ["bun"]
	}
}
